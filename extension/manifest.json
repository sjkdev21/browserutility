{
  "manifest_version": 3,
  "name": "Browser Utility Toolkit",
  "description": "A modular browser utility extension with transcript, X drafting, and video tools.",
  "version": "0.1.0",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "clipboardWrite",
    "downloads"
  ],
  "host_permissions": [
    "https://*.youtube.com/*",
    "https://x.com/*",
    "https://api.openai.com/*",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Browser Utility",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "https://*.youtube.com/*",
        "https://x.com/*",
        "http://*/*",
        "https://*/*"
      ],
      "js": ["scripts/content.js"],
      "run_at": "document_idle"
    }
  ]
}
